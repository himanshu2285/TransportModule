@model TransportModule1.Models.Bills

<h2>Delete Bill</h2>
<p>Are you sure you want to delete this bill?</p>

<table class="table">
    <tr><th>Lr Date:</th><td>@Model.LrDate.ToShortDateString()</td></tr>
    <tr><th>Lr No:</th><td>@Model.LrNo</td></tr>
    <tr><th>Vehicle Type:</th><td>@Model.VehicleType</td></tr>
    <tr><th>From:</th><td>@Model.From</td></tr>
    <tr><th>To:</th><td>@Model.To</td></tr>
    <tr><th>Vehicle No:</th><td>@Model.VehicleNo</td></tr>
    <tr><th>Freight:</th><td>@Model.Freight</td></tr>
    <tr><th>Others:</th><td>@Model.Others</td></tr>
</table>

<form asp-action="DeleteBill" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
