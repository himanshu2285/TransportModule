@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Keep layout but hide navbar using JavaScript
}
@model IEnumerable<TransportModule1.Models.Bills>

<h2>Bill List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lr Date</th>
            <th>Lr No</th>
            <th>Vehicle Type</th>
            <th>From</th>
            <th>To</th>
            <th>Vehicle No</th>
            <th>Freight</th>
            <th>Others</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@bill.LrDate.ToShortDateString()</td>
                <td>@bill.LrNo</td>
                <td>@bill.VehicleType</td>
                <td>@bill.From</td>
                <td>@bill.To</td>
                <td>@bill.VehicleNo</td>
                <td>@bill.Freight</td>
                <td>@bill.Others</td>
                <td>
                    <a asp-controller="Dashboard" asp-action="EditBill" asp-route-id="@bill.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Dashboard" asp-action="DeleteBill" asp-route-id="@bill.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



