@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="row mx-0 align-items-center" style="background-color: #f5f7fa;">
    <div class="col-md-6 p-5">
        <h1 class="display-5 fw-bold">
            Simplify Your Transport & Billing with <span class="text-primary">Transport Module</span>
        </h1>
        <p class="lead">
            Streamline logistics, manage bills, and get real-time insights for your transport business.
        </p>
        <div class="mt-4">
            <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Login">Get Started</a>
            <a class="btn btn-outline-secondary btn-lg">Learn More</a>
        </div>
    </div>
    <div class="col-md-6 text-center p-5">
        <!-- Replace with an appropriate transport-themed image or illustration -->
        <img src="~/images/transport-hero.jpg" alt="Transport Illustration" class="img-fluid" />
    </div>
</div>

