@{
    ViewData["Title"] = "Home Page";
}

<style>
    .circular-image {
        width: 380px; /* Adjust size as needed */
        height: 380px; /* Keep width and height equal for perfect circle */
        border-radius: 50%; /* This makes the image circular */
        object-fit: cover; /* Ensures the image maintains aspect ratio */
        border: 5px solid #ffffff; /* Optional: Add a border */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Optional: Add a shadow for better effect */
    }

</style>

<!-- Hero Section -->
<div class="row mx-0 align-items-center" style="background-color: #f5f7fa;">
    <div class="col-md-6 p-5">
        <h1 class="display-5 fw-bold">
            Simplify Your Billing & Invoicing with <span class="text-primary">Transport Module</span>
        </h1>
        <p class="lead">
            Manage party details, create bills, and streamline your billing process — all in one place.
        </p>
        <div class="mt-4">
            <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Login">Get Started</a>
            <a class="btn btn-outline-secondary btn-lg" asp-action="About">Learn More</a>
        </div>
    </div>
    <div class="col-md-6 text-center p-5">
        <!-- Replace with an appropriate transport-themed image or illustration -->
        <img src="~/images/transport-hero.jpg" alt="Billing Software" class="circular-image" />
    </div>
</div>

