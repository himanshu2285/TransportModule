<!-- Features Section -->
<div class="container my-5" id="features">
    <h2 class="text-center mb-4">Features</h2>
    <div class="row g-4">
        <!-- Manage Party Details -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Manage Party Details</h5>
                    <p class="card-text">
                        Add, edit, and store customer and vendor information with ease.
                    </p>
                </div>
            </div>
        </div>
        <!-- Create & Track Bills -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Create & Track Bills</h5>
                    <p class="card-text">
                        Generate new invoices, track payments, and keep an organized record of all bills.
                    </p>
                </div>
            </div>
        </div>
        <!-- Analytics & Reporting -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Analytics & Reporting</h5>
                    <p class="card-text">
                        Analyze billing trends and performance to make informed financial decisions.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Manage Bills Highlight Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="mb-3">Manage Your Bills Easily</h2>
        <p class="mb-4">
            Centralize all your billing information—from creation to final payment—in one intuitive platform.
        </p>
        <a class="btn btn-light btn-lg" asp-area="" asp-controller="Dashboard" asp-action="Index">
            Go to Manage Bills
        </a>
    </div>
</div>

<!-- About Us Section -->
